<% form_tag do %>
<fieldset>
  <legend> Please login </legend>
  <div>
    <label for="userid"> userid : </label>
    <%=  text_field_tag :userid, params[:userid] %>
  </div>

  <div>
    <label for="password"> password : </label>
    <%= password_field_tag :password , params[:password] %>
  </div>
  
  <div>
    <%= submit_tag "LOGIN" %>
  </div>
</fieldset>
<% end %>


